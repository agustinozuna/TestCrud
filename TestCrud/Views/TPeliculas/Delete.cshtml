@model TestCrud.Models.TPelicula

@{
    ViewData["Title"] = "Delete";
}

<h1>Borrar</h1>

<h3>Borrar es poner en 0 el stock de ventas y alquileres</h3>
<div>
    <h4>TPelicula</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Película
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TxtDesc)
        </dd>
        <dt class = "col-sm-2">
            Cantidad Disponible Alquiler
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CantDisponiblesAlquiler)
        </dd>
        <dt class="col-sm-2">
            Cantidad Disponible Venta
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CantDisponiblesVenta)
        </dd>
        <dt class = "col-sm-2">
            Precio Alquiler
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PrecioAlquiler)
        </dd>
        <dt class = "col-sm-2">
           Precio Venta
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PrecioVenta)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CodPelicula" />
        <input type="submit" value="Borrar" class="btn btn-danger" /> |
        <a asp-action="Index">Regresar</a>
    </form>
</div>
